{
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_desc__",
  "version": "1.0.0",
  "default_locale": "en",
  "icons": {
    "32": "assets/32.png",
    "128": "assets/128.png"
  },
  "page_action": {
    "default_title": "YouTube 双字幕"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*",
        "https://www.youtube.com/embed/*",
        "https://www.youtube-nocookie.com/embed/*"
      ],
      "js": ["langs.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": ["storage", "tabs", "declarativeContent", "contextMenus"],
  "web_accessible_resources": ["constant.js", "assets/2.ogg"],
  "manifest_version": 2
}
